<Window x:Class="Test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Test"
        mc:Ignorable="d"
        Title="MainWindow" >

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Style.xaml">
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    
    <DockPanel Background="{StaticResource MainBrush}">
        <TextBlock DockPanel.Dock="Top" Style="{StaticResource TextblockStyle}" Text="Тест на определение типа личности "/>
        <Grid DockPanel.Dock="Bottom">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Image Source="Button.png" Grid.Column="0" Style="{StaticResource ImageStyle}">
                <Image.ToolTip >
                    <ToolTip Style="{StaticResource TooltipStyle}">
                        <StackPanel Orientation="Vertical">
                        <TextBlock>Тест на тип личности по Майерс-Бриггс</TextBlock>
                        <TextBlock>Для определения как люди воспринимают мир и принимают решения</TextBlock>
                    </StackPanel>
                        </ToolTip>
                </Image.ToolTip>
            </Image>
            <Button Grid.Column="1" Style="{StaticResource ButtonStyle}" Template="{StaticResource TemplateButton}" Content="Next"/>
        <Button Grid.Column="2" Background="{StaticResource ButtonImageStatisticBrush}" Template="{StaticResource ResourceKey=TemplateButton}">
                <Button.ToolTip >
                    <ToolTip Style="{StaticResource TooltipStyle}">
                        <StackPanel Orientation="Vertical">
                            <TextBlock>Посмотреть подробную статистику в Exel</TextBlock>
                            <TextBlock>Доступно только после прохождения теста</TextBlock>
                        </StackPanel>
                    </ToolTip>
                </Button.ToolTip>
            </Button>
        </Grid>
        <Grid>
            <ItemsControl ItemsSource="{Binding Questions}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Vertical">
                            <TextBlock Text= "{Binding id}"/>
                            <TextBlock Text="{Binding question}"/>
                            <TextBlock Text="{Binding answerA}"/>
                            <TextBlock Text="{Binding answerB}"/>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>

    </DockPanel>
</Window>
